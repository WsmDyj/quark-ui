{
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx/**"
  ],
  "include": [
    "src/**/*",
  ]
}